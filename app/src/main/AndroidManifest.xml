<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.eltamiuz.eduplane">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_1"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_1"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.eltamiuz.eduplane.Activities.SplachActivity"
            android:theme="@style/AppTheme1">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.eltamiuz.eduplane.Activities.loginActivity"
            android:theme="@style/AppTheme1" />
        <activity
            android:name="com.eltamiuz.eduplane.Activities.SignupActivity"
            android:theme="@style/AppTheme1" />
        <activity
            android:name="com.eltamiuz.eduplane.Activities.HomeActivity"
            android:label=""
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.eltamiuz.eduplane.Activities.AccountActivity"
            android:label="@string/account"
            android:parentActivityName="com.eltamiuz.eduplane.Activities.HomeActivity" />
        <activity android:name="com.eltamiuz.eduplane.Activities.CoursesActivity" />
        <activity android:name="com.eltamiuz.eduplane.Activities.notificationActivity" />
        <activity android:name="com.eltamiuz.eduplane.Activities.categoryActivity" />
        <activity android:name="com.eltamiuz.eduplane.Activities.CourseReservationActivity" />
        <activity android:name="com.eltamiuz.eduplane.Activities.CoursesItemActivity" />
        <activity android:name="com.eltamiuz.eduplane.Activities.ShowingContent" />
        <activity android:name="com.eltamiuz.eduplane.Activities.AboutDeveloper"
            android:label="عن المطور"
            android:parentActivityName="com.eltamiuz.eduplane.Activities.HomeActivity"></activity>
    </application>

</manifest>